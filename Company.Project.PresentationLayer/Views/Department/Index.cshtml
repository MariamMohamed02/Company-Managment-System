@*Data Type of the returned model from the Index() action*@
@model IEnumerable<Department>


@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department"class=" btn btn-primary" > Create Department</a>

<br />
<br />

@if(Model.Count()>0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedAt</td>
                    
                    <td>
                        @* you must send the id of the current department to send it when submitting  *@
                        <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Details">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-route-id="@item.Id" asp-action="Edit">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-4 alert alert-info">
        <h4>
            There are no departments
        </h4>
    </div>
}