@*Data Type of the returned model from the Index() action*@
@model IEnumerable<RoleToReturnDto>


@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>

<br />
<br />
<form class="mb-2">
    <div class="d-flex align-items-center gap-2" style="max-width: 400px;">
        <input placeholder="Search By Name" name="SearchInput" class="form-control" />
        <input type="submit" class="btn btn-success" value="Search" />
    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

@if(Model.Count()>0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                
                <th>Details</th>
                <th>Updates</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                    <partial name="ButtonsPartialView" model="@item.Id" />
                   
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-4 alert alert-info">
        <h4>
            There are no Roles
        </h4>
    </div>
}