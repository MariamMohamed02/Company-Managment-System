@model ForgetPasswordDto
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m3 alert alert-info"></div>
		<form asp-action="SendResetPasswordURL">
			<input class="text" asp-for="Email" placeholder="Email" required="">
			
			<input type="submit" value="Reset Password">
		</form>
		<p>Already have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>



@section ValidationSection {

	<partial name="_ValidationScriptsPartial" />
}
